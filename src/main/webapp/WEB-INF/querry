CREATE TABLE def_user(
	iuser INT UNSIGNED AUTO_INCREMENT PRIMARY KEY,
	nm VARCHAR(5) NOT NULL,
	phone VARCHAR (13) UNIQUE NOT NULL,
	uid VARCHAR(20) UNIQUE NOT NULL,
	upw VARCHAR(200) NOT NULL,
	email VARCHAR(300) NOT NULL,
	nickname VARCHAR(70),
	gender TINYINT UNSIGNED CHECK(gender IN (1, 2)),
	rdt DATETIME DEFAULT NOW()
);
------- 유저 정보 테이블 -------
https://www.vanmori.com/
-----------------------------

CREATE TABLE def_board(
	iboard INT UNSIGNED AUTO_INCREMENT PRIMARY KEY,
	writer INT UNSIGNED NOT NULL,
	ctnt VARCHAR(2000) NOT NULL,
	domNm VARCHAR(40) NOT NULL,
	domImg VARCHAR(100) NOT NULL,
	domCurBuy VARCHAR(20) NOT NULL,
	domImBuy VARCHAR(20) NOT NULL,
	hit INT UNSIGNED NOT NULL DEFAULT 0,
	rdt DATETIME DEFAULT NOW(),
	mdt DATETIME DEFAULT NOW(),
	FOREIGN KEY (writer) REFERENCES def_user(iuser)
);

------- 매인페이지 정보 테이블 -------